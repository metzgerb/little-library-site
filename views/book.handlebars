<div id="top-div">
<h1>Books</h1>
<p id="errorMsg"></p>
<form method="post" id="input-form">
   <table class="form-table">
      <thead></thead>
      <tbody>
         <tr>
            <td>
               <label for="isbn">ISBN: </label>
            </td>
            <td colspan="3" align="center">
               <input type="text" id="formISBN" name="isbn"/>
            </td>
            <td>
               <label for="topic">Topic: </label>
            </td>
            <td>
               <input type="text" id="formTopic" name="topic"/>
            </td>
            <td>
               <label for="shelf">Shelf: </label>
            </td>
            <td>
               <input type="text" id="formShelf" name="shelf"/>
            </td>
         </tr>
         <tr>
            <td>
               <label for="date">Published Date: </label>
            </td>
            <td>
               <input type="date" id="formDate" name="date"/>
            </td>
            <td>
               <label for="title">Title: </label>
            </td>
            <td colspan="5">
               <input type="text" id="formTitle" name="title"/>
            </td>
         </tr>
         <tr>
            <td>
               <label for="authors">Authors: </label>
            </td>
            <td>
               <input type="text" id="formAuthors" name="authors"/>
            </td>
            <td>
               <label for="description">Description: </label>
            </td>
            <td colspan="5" rowspan="3">
               <input type="textarea" id="formdescription" name="weight"/>
            </td>
         </tr>
         <tr>
         </tr>
         <tr>
         </tr>
         <tr>
            <td colspan="8" align="center">
               <button id="formBtn" type="button">Add</button>
               <button id="resetBtn" type="button">Reset</button>
            </td>
         </tr>
      </tbody>
   </table>
</form>
</div>
<table>
   <thead>
      <th>isbn</th>
      <th>Title</th>
      <th>Date Published</th>
      <th>Description</th>
      <th>Authors</th>
      <th>Topic</th>
      <th>Shelf</th>
      <th>Status</th>
      <th>Options</th>
   </thead>
   <tbody id="data-table">
      <tr>
         <td>isbn</td>
         <td>title</td>
         <td>published_date</td>
         <td>description</td>
         <td>comma separted list of authors</td>
         <td>topic</td>
         <td>shelf</td>
         <td>available or unavailable</td>
         <td>
            <button type="button" onclick="editRow({{this.id}})">Edit</button>
            <button type="button" onclick="deleteRow({{this.id}})">Delete</button>
         </td>
      </tr>
      {{#if results}}
         {{#each results}}
            <tr id={{this.isbn}}>
               <td>{{this.isbn}}</td>
               <td>{{this.title}}</td>
               <td>{{this.published_date}}</td>
               <td>{{this.description}}</td>
               <td>{{this.authors}}</td>
               <td>{{this.topic}}</td>
               <td>{{this.shelf}}</td>
               <td>{{#if this.checked_out}}un{{/if}}available</td>
               <td>
                  <button type="button" onclick="editRow({{this.id}})">Edit</button>
                  <button type="button" onclick="deleteRow({{this.id}})">Delete</button>
               </td>
            </tr>
         {{/each}}
      {{/if}}
   </tbody>
</table>

<script src="js/actions.js"></script>